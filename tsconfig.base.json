{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": {
      "@ts-validator-adapter/core/*": ["packages/core/src/*"],
      "@ts-validator-adapter/periphery/*": ["packages/periphery/src/*"],
      "@ts-validator-adapter/ajv/*": ["packages/adapter/ajv/src/*"],
      "@ts-validator-adapter/arktype/*": ["packages/adapter/arktype/src/*"],
      "@ts-validator-adapter/typebox/*": ["packages/adapter/typebox/src/*"],
      "@ts-validator-adapter/valibot/*": ["packages/adapter/valibot/src/*"],
      "@ts-validator-adapter/zod/*": ["packages/adapter/zod/src/*"],
      "@ts-validator-adapter/zod-mini/*": ["packages/adapter/zod-mini/src/*"],

      "@ts-validator-adapter/demo-with-vite/*": ["projects/demo-with-vite/*"]
    }
  },
  "include": ["src"]
}
